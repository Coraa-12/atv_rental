<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.fiction.AdminPanelController" prefWidth="600" prefHeight="400">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets left="20" right="20"/>
        </padding>

        <Label text="Admin Panel - ATV Rentals" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="400">
            <Label text="Customer Name:"/>
            <TextField fx:id="customerNameField" maxWidth="400"/>

            <Label text="ATV Model:"/>
            <ComboBox fx:id="atvModelComboBox" maxWidth="400"/>

            <Label text="Start Date:"/>
            <DatePicker fx:id="startDatePicker" maxWidth="400"/>

            <Label text="End Date:"/>
            <DatePicker fx:id="endDatePicker" maxWidth="400"/>

            <Label text="Rental Duration (hours):"/>
            <TextField fx:id="rentalDurationField" maxWidth="400"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER" maxWidth="400">
            <Button text="Submit Rental" onAction="#handleSubmit" prefWidth="120"/>
            <Button text="View Rental Records" onAction="#switchToRentalRecords" prefWidth="150"/>
        </VBox>
    </VBox>
</AnchorPane>