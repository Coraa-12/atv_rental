<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fiction.RentalRecordsController">

    <!-- Top bar with a title -->
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rental Records" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button text="Back to Admin Panel" onAction="#switchToAdminPanel" />
        </HBox>
    </top>

    <!-- Center area with the TableView -->
    <center>
        <TableView fx:id="rentalTable">
            <columns>
                <TableColumn fx:id="rentalIdColumn" text="Rental ID" />
                <TableColumn fx:id="customerNameColumn" text="Customer Name" />
                <TableColumn fx:id="atvIdColumn" text="ATV ID" />
                <TableColumn fx:id="startTimeColumn" text="Start Time" />
                <TableColumn fx:id="endTimeColumn" text="End Time" />
                <TableColumn fx:id="rentalDurationColumn" text="Rental Duration" />
                <TableColumn fx:id="statusColumn" text="Status" />
                <TableColumn fx:id="totalCostColumn" text="Total Cost" />
                <TableColumn fx:id="actionColumn" text="Actions" />
            </columns>
        </TableView>
    </center>

    <!-- Bottom bar for spacing or additional controls -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label text="Manage rental records effectively" />
        </HBox>
    </bottom>

</BorderPane>
